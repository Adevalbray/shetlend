<div class="card">
  <% if shetland.photo.url.nil? %>
    <% photo_path = 'http://res.cloudinary.com/doitabroad/image/upload/v1511967450/logo_ttcvyk.jpg' %>
  <% else %>
    <% photo_path = cl_image_path shetland.photo, height: 300, width: 400, crop: :fill %>
  <% end %>
  <div class="card-header" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= photo_path %>')">
    <div class="row-text">
      <div class="price">
        <span><%= shetland.price_per_hour %>â‚¬</span>
      </div>
      <div class="basic-info">
        <h3><%= shetland.name %></h3>
        <p><%= shetland.age %> ans</p>
        <div class="row-location">
          <p>
            <i class="fa fa-map-marker" aria-hidden="true"></i>  <%= shetland.location %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="card-description">
    <div class="card-description-owner">
      <img class="card-user" src="<%= image_path shetland.user.photo %>">
      <p><%= shetland.user.first_name.capitalize %></p>
    </div>
    <% if description_should_appear %>
      <p><%= shetland.description %></p>
    <% end %>
  </div>
  <div class="card-see-more">
    <%= link_to 'See more', shet_path(shetland), class: "btn btn-danger" %>
  </div>
</br>
</div>
