<div class="container">
  <div class="row">
    <div class="col-xs-8">
        <h1> <%= @shetland.name %> </h1>
        <%= image_tag @shetland.photo %>
        <br>
        <h2><%= @shetland.location %></h2>
        <br>
        <%= @shetland.description %>
        <br>
        <%= @shetland.price_per_hour %> € / heure
